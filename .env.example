# .env.example (Project Root)

# --- WhatsApp Business API Configuration ---
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id_here
WEBHOOK_SECRET=your_whatsapp_webhook_secret_here
WHATSAPP_VERIFY_TOKEN=your_whatsapp_verify_token_here


# --- Primary AI Provider: Gemini ---
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# --- Fallback AI Provider: OpenAI ---
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# --- E-commerce Integration: Shopify ---
SHOPIFY_STORE_URL=your_shopify_store_url_here
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token_here

# --- Shipping Integration (Choose one or use as needed) ---
EASYPOST_API_KEY=your_easypost_api_key_here
FEDEX_API_KEY=your_fedex_api_key_here
UPS_API_KEY=your_ups_api_key_here
DHL_API_KEY=your_dhl_api_key_here

# --- PostgreSQL Database Credentials for Docker ---
POSTGRES_DB=ai_assistant
POSTGRES_USER=ai_assistant
POSTGRES_PASSWORD=your_secure_postgres_password_here

# --- Full Database Connection URL ---
# Note: The password here must match POSTGRES_PASSWORD above
DATABASE_URL=postgresql://ai_assistant:your_secure_postgres_password_here@postgres:5432/ai_assistant

# --- Service URLs for Docker Network ---
ECOMMERCE_SERVICE_URL=http://ecommerce-integration:5002
AI_SERVICE_URL=http://ai-conversation-engine:5001

# --- Security ---
INTERNAL_API_KEY=your_strong_secret_api_key_here

# --- General App Configuration ---
FLASK_APP=src.main
AI_TEMPERATURE=0.7
MAX_TOKENS=1024
CHUNK_SIZE=500
CHUNK_OVERLAP=50